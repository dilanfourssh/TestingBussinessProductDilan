
@{
    Layout = "~/Views/Shared/Bussinesssiteshared.cshtml";
}

<div class="container">
    <div class="row">
        
        <div class="col-sm">
            <div class="row" style="margin-bottom:30px;">
                <div class="col-sm" style="border-radius: 10px 10px 10px 10px; padding:20px 20px 20px 20px; background-color:#f8f9fa; color:green">
                    <h4 style="text-align:center"> Add Product My Bussiness Page </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    @using (Html.BeginForm("Administor", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="exampleInputPassword1">Title</label>
                            <input type="text" class="form-control" name="title" id="exampleInputPassword1" placeholder="title">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Product Price </label>
                            <input type="text" class="form-control" name="productPrice" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="price">
                            
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Description</label>
                            <input type="text" class="form-control" name="description" id="exampleInputPassword1" placeholder="description">
                        </div>      
                        <div class="form-group">
                            <label for="exampleInputPassword1">Descount presentage</label>
                            <input type="number" class="form-control" name="descountPresentage" id="exampleInputPassword1" placeholder="Descount Presentage">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Upload Product Image</label>
                            <input type="file" class="form-control" name="image" id="exampleInputPassword1" placeholder="Product Image">
                        </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">select Product Category</label>
                                <select class="custom-select" id="inputGroupSelect04" name="productCategory">
                                    <option value="simple">simple</option>
                                    <option value="middle" selected>middle</option>
                                    <option value="high" selected>high</option>
                                </select>

                            </div>
                            <button type="submit" class="btn btn-outline-success" style="width:100%; margin-bottom:10px">Add Product</button>
                            }
                            <a href='@Url.Action("Index", "Home")'><button type="button" class="btn btn-outline-danger" style="width:100%">Go To Home Page</button></a>

                        </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script>
    function submitform(thiss) {
        $('form').submit();
    }
</script>
